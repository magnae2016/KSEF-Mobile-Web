<!DOCTYPE html>
<html lang="ko">
    
    <head>
        <!-- Required meta tags -->
        <%- include("../partialView/head", { title }); %>
        <link
            href="https://fonts.googleapis.com/icon?family=Material+Icons|Material+Icons+Round"
            rel="stylesheet"
        />
        <%- include("../partialView/stylesheet") %>    
    </head>

    <body id="mainBody" class="main bg-white position-fixed">
        <div
            class="w-100 h-100 position-relative overflow-hidden"
            style="touch-action: none"
        >
            <div
                class="position-relative bg-dark"
                style="overflow: hidden; touch-action: none"
            >
                <img src="/images/static/sample.jpg" class="w-100 opacity-0" />
                <!-- .jumbotron  -->
                <div
                    class="jumbotron position-absolute top-0 start-0 bottom-0 end-0 overflow-hidden rounded-top-left-xxl rounded-top-right-xxl"
                    style="touch-action: none; pointer-events: none; background-color: <%= context.template && context.template.template_brand_color %> !important;"
                >
                    <div
                        class="d-flex flex-column position-relative ps-4 pt-3 pe-3 pb-4 h-100"
                    >
                        <div class="position-relative h-100 pe-5">
                            <small class="fw-bold pt-2 pb-1"><%= context.category && context.category.category_name %></small>
                            <h3 class="fw-bold lh-medium ls-medium text-keep">
                                <%= context.notice && context.notice.notice_title %></h3>
                            <small class="fs-small fw-normal ls-xs"
                                ><%= context.notice && context.notice.notice_created_at %></small
                            >
                        </div>
                    </div>
                </div><!-- /END .jumbotron  -->
            </div>
            <div
                class="jumbotron-fluid position-absolute top-0 start-0 bottom-0 end-0 overflow-scroll rounded-top-left-xxl rounded-top-right-xxl"
                style="touch-action: pan-y"
            >
                <div class="w-100 h-100 d-flex flex-column">
                    <div class="d-block" style="touch-action: none">
                        <img src="/images/static/sample.jpg" class="w-100 opacity-0" />
                    </div>
                    <button
                        type="button"
                        class="btn-close d-flex align-items-center position-absolute top-0 end-0 rounded-circle p-0 mt-3 me-3"
                        aria-label="Close"
                        onclick="history.go(-1);"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="black" width="18px" height="18px" class="h6 my-0 mx-auto text-black fw-bold">
                            <path d="M0 0h24v24H0V0z" fill="none" />
                            <path
                                d="M18.3 5.71c-.39-.39-1.02-.39-1.41 0L12 10.59 7.11 5.7c-.39-.39-1.02-.39-1.41 0-.39.39-.39 1.02 0 1.41L10.59 12 5.7 16.89c-.39.39-.39 1.02 0 1.41.39.39 1.02.39 1.41 0L12 13.41l4.89 4.89c.39.39 1.02.39 1.41 0 .39-.39.39-1.02 0-1.41L13.41 12l4.89-4.89c.38-.38.38-1.02 0-1.4z" />
                        </svg>
                    </button>
                    <!-- main -->
                    <main id="mainContent" class="d-flex flex-column flex-grow-1">
                        <div class="bg-white">
                            <div class="mt-4 px-4">
                                <%- include(`./templates/${context.template.template_file}`) %>
                            </div>
                        </div>
                    </main><!-- /END main -->
                </div>
            </div>
        </div>
        <%- include("../partialView/javascripts") %>
    </body>
</html>
